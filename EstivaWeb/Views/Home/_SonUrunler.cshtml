@{
    Layout = null;
}
@using EstivaWeb.Models
@model List<Urun>

<div class="col-12">
    <div class="row">
        <!-- product item start -->
        @foreach (Urun item in Model)
        {

            <div class="product-item col-lg-3 col-md-4 col-sm-6">
                <figure class="product-thumb">
                    <a href="javascript:void(0)" data-toggle="modal" data-target="#quick_view" onclick="resimbuyut('/Content/images/urunler/@item.UrunResmi','@item.Urunadi')">
                        <img class="pri-img" src="~/Content/images/urunler/@item.UrunResmi" alt="@item.Urunadi">
                        <img class="sec-img" src="~/Content/images/urunler/@item.UrunResmi" alt="@item.Urunadi">
                    </a>
                    <!-- <div class="product-badge">
                        @if (item.IsUrunYeni)
                        {
                            <div class="product-label new">
                                <span>Yeni</span>
                            </div>
                        }

                        @if (item.IsUrunIndirim)
                        {
                            <div class="product-label discount">
                                <span>Indirim</span>
                            </div>
                        }

                    </div>-->


                </figure>
                <div class="product-caption text-center">

                    <div class="product-identity">
                        <p class="manufacturer-name"><a href="javascript:void(0)">@item.UrunCinsi</a></p>
                    </div>


                    <h6 class="product-name">
                        <a href="#">@item.Urunadi</a>
                    </h6>
                    <div class="price-box">
                        <span class="price-regular">@item.UrunFiyati TL </span>
                        <span class="price-old"><del>@item.UrunFiyati2 TL</del></span>
                    </div>
                    <p> Hemen Satın Al</p>
                    <div class="row">
                        <div class="col-lg-2"> </div>
                        <div class="col-lg-2">
                            <a href="@item.TrendLink" target="_blank"><img src="~/Content/assets/img/logo/trlogo.png" /></a>
                        </div>
                        <div class="col-lg-2">
                            <a href="@item.N11Link" target="_blank"><img src="~/Content/assets/img/logo/n11logo.png" /></a>
                        </div>
                        <div class="col-lg-2">
                            <a href="@item.GittiLink" target="_blank"><img src="~/Content/assets/img/logo/gglogo.jpg" /></a>
                        </div>
                        <div class="col-lg-2">
                            <a href="@item.HepsiLink" target="_blank"><img src="~/Content/assets/img/logo/hblogo.jpg" /></a>
                        </div>
                        <div class="col-lg-2"> </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3"> </div>
                        <div class="col-lg-2">
                            <a href="@item.HepsiLink" target="_blank"><img src="~/Content/assets/img/logo/cslogo.jpg" /></a>
                        </div>
                        <div class="col-lg-2">
                            <a href="https://www.instagram.com/estivajewellery/" target="_blank"><img src="~/Content/assets/img/logo/inslogo.png" /></a>
                        </div>
                        <div class="col-lg-2">
                            <a href="https://api.whatsapp.com/send?phone=5497372445&text=Merhaba!%20Fiyat%20Bilgisi%20Alabilir%20miyim?" target="_blank"><img src="~/Content/assets/img/logo/whatlogo.png" /></a>
                        </div>
                        <div class="col-lg-3"> </div>
                    </div>
                </div>
            </div>

        }
        <!-- product item end -->
    </div>
</div>

